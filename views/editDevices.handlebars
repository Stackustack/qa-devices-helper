<div class="ui segment" id="edit_device_form">
    <div>
        <form class="ui form">
            <h4 class="ui dividing header">Edit Device: {{device.codeName}} </h4>
            <div class="field">
                <label>General info</label>
                <div class="three fields">
                    <div class="field">
                        <input
                            disabled=""
                            id="codeName" 
                            type="text" 
                            placeholder="Device ID..."
                            value="{{device.codeName}}">
                    </div>
                    <div class="field">
                        <input 
                            id="brand"
                            type="text" 
                            placeholder="Device brand..."
                            value="{{device.brand}}">
                    </div>
                    <div class="field">
                        <input 
                            id="model"
                            type="text" 
                            placeholder="Device model..."
                            value="{{device.model}}">
                    </div>
                </div>

            </div>
            <div class="field">
                <label>OS Specific Informations and Details</label>
                <div class="fields">
                    <div class="field">
                        <div class="ui selection dropdown">
                            <input type="hidden" name="os_type">
                            <i class="dropdown icon"></i>
                            <div class="text" id="osTypeSelected">{{device.osType}}</div>
                            <div class="menu">
                                <div class="item" data-value="ios">ios</div>
                                <div class="item" data-value="android">android</div>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui selection dropdown">
                            <input type="hidden" name="device_type">
                            <i class="dropdown icon"></i>
                            <div class="text" id="deviceTypeSelected">{{device.deviceType}}</div>
                            <div class="menu">
                                <div class="item" data-value="phone">phone</div>
                                <div class="item" data-value="tablet">tablet</div>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <input 
                            id="osVersion"
                            type="text" 
                            placeholder="OS Version"
                            value="{{device.osVersion}}">
                    </div>
                </div>
            </div>
            <div class="field">
                <label for="">Additional Informations / Notes</label>
                <input 
                    id="notes"
                    type="text" 
                    placeholder="Currently assigned to..."
                    value="{{device.notes}}">
            </div>
            <button class="ui primary button" type="button" id="save_changes_button">Save Changes</button>
            <button class="ui button" type="button" id="go_back">Go Back to Devices</button>
        </form>
    </div>
</div>

