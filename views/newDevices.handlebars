<div class="device-form">
    <div class="ui segment" id="new_device_form">
        <div>
            <form class="ui form">
                <h4 class="ui dividing header">New device</h4>
                <div class="field">
                    <label>General info</label>
                    <div class="three fields">
                        <div class="field">
                            <input id="codeName" type="text" placeholder="Device ID..." name="codeName">
                        </div>
                        <div class="field">
                            <input id="brand" type="text" placeholder="Device brand..." name="brand">
                        </div>
                        <div class="field">
                            <input id="model" type="text" placeholder="Device model..." name="model">
                        </div>
                        <div class="field">
                            <div class="ui selection dropdown">
                                <input type="hidden" id="location" name="location">
                                <i class="dropdown icon"></i>
                                <div class="default text">Location</div>
                                <div class="menu">
                                    <div class="item" data-value="Global">Global</div>
                                    <div class="item" data-value="Bialystok">Bialystok</div>
                                    <div class="item" data-value="Poznan">Poznan</div>
                                    <div class="item" data-value="Warsaw">Warsaw</div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="field">
                    <label>OS Specific Informations and Details</label>
                    <div class="fields">
                        <div class="field">
                            <div class="ui selection dropdown">
                                <input type="hidden" name="osType">
                                <i class="dropdown icon"></i>
                                <div class="default text" id="osTypeSelected">OS</div>
                                <div class="menu">
                                    <div class="item" data-value="ios">ios</div>
                                    <div class="item" data-value="android">android</div>
                                    <div class="item" data-value="other">other</div>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <input id="osVersion" type="text" placeholder="OS Version" name="osVersion">
                        </div>
                        <div class="field">
                            <div class="ui selection dropdown">
                                <input type="hidden" name="deviceType">
                                <i class="dropdown icon"></i>
                                <div class="default text" id="deviceTypeSelected">Device type</div>
                                <div class="menu">
                                    <div class="item" data-value="phone">phone</div>
                                    <div class="item" data-value="tablet">tablet</div>
                                    <div class="item" data-value="other">other</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label for="">Additional Informations / Notes</label>
                    <input id="notes" type="text" placeholder='"Currently assigned to..." and other info' name="notes">
                </div>
                <button class="ui primary button submit" type="button" id="add_button">Add</button>
                <button class="ui button" type="button" id="go_back">Cancel</button>
            </form>
        </div>
    </div>
</div>


